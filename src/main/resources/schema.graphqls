
type Query {
    taskById(id: ID): Task
    tasksByKey(key: ID): [Task]
}

type Mutation {
    addTask(key: String, name: String, dateTime: String, tag: String): Task
    updateTask(id: ID, key: String, name: String, dateTime: String, tag: String, status: String): Task
    deleteTask(id: ID): Task
}

type Task {
    id: ID!
    key: String
    name: String
    dateTime: String
    status: Status
    tag: String
}

enum Status {
    CREATED
    DONE
    DELETED
}